<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag(product.image) unless product.image.blank? %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Admin:</strong>
    <%= product.admin.name unless product.admin.blank? %>
  </p>

</div>
