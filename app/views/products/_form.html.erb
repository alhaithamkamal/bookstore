<div class="container">
<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group my-4">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group my-4">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, class: "form-control" , required: true %>
  </div>

  <div class="form-group my-4">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", required: true %>
  </div>

  <div class="form-group my-4">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control", required: true %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Back", products_path, class: "btn btn-light" %>
  </div>
<% end %>
</div>